{
  "name": "bloomrpc-extended",
  "productName": "BloomRPC Extended",
  "version": "2.2.0",
  "description": "GRPC GUI client",
  "main": "app/out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "prepackage": "cd app && bun install --production",
    "package": "bun run prepackage && electron-vite build && electron-builder build --config.npmRebuild=false -p never",
    "package-all": "bun run prepackage && electron-vite build && electron-builder build -mwl --config.npmRebuild=false -p never",
    "package-linux": "bun run prepackage && electron-vite build && electron-builder build --linux --config.npmRebuild=false -p never",
    "package-win": "bun run prepackage && electron-vite build && electron-builder build --win --x64 --config.npmRebuild=false -p never",
    "test": "vitest run --passWithNoTests",
    "test-watch": "vitest",
    "lint": "oxlint .",
    "fmt": "oxfmt --write app/"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "oxlint",
      "oxfmt --write"
    ]
  },
  "build": {
    "productName": "BloomRPC Extended",
    "appId": "io.github.ahmethakanbesel.BloomRPCExtended",
    "extraResources": [
      {
        "from": "static",
        "to": "static"
      }
    ],
    "extraFiles": [
      {
        "from": "resources/icon.ico",
        "to": "resources/icon.ico"
      }
    ],
    "files": [
      "out/**/*",
      "package.json",
      "!node_modules/grpc",
      "!node_modules/**/grpc"
    ],
    "dmg": {
      "artifactName": "BloomRPC-Extended-${version}-${arch}.${ext}",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "nsis": {
      "artifactName": "BloomRPC-Extended-Setup-${version}.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "artifactName": "BloomRPC-Extended-${version}-${arch}.${ext}",
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmethakanbesel/bloomrpc-extended.git"
  },
  "author": {
    "name": "Ahmet Hakan Besel"
  },
  "license": "LGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ahmethakanbesel/bloomrpc-extended/issues"
  },
  "keywords": [
    "gRPC",
    "GUI",
    "bloomRPC",
    "BloomRPC Extended",
    "gRPC GUI"
  ],
  "homepage": "https://github.com/ahmethakanbesel/bloomrpc-extended",
  "devDependencies": {
    "@codemirror/lang-json": "^6.0.2",
    "@types/history": "^4.7.2",
    "@types/mousetrap": "^1.6.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@uiw/react-codemirror": "^4.25.4",
    "electron": "~35.0.0",
    "electron-builder": "^25.0.0",
    "electron-debug": "^4.0.0",
    "electron-vite": "^5.0.0",
    "husky": "^1.3.1",
    "jsdom": "^26.0.0",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.0.0",
    "sass": "^1.97.0",
    "typescript": "^5.8.0",
    "vite": "^7.0.0",
    "vitest": "^4.0.0"
  },
  "dependencies": {
    "@codemirror/lint": "^6.9.4",
    "@dnd-kit/core": "^6.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.0.0",
    "@electron/remote": "^2.1.3",
    "@grpc/grpc-js": "^1.12.0",
    "@grpc/proto-loader": "^0.7.0",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.1.3",
    "antd": "^3.26.0",
    "bloomrpc-mock": "0.3.2",
    "electron-store": "^11.0.0",
    "grpc-reflection-js": "^0.1.1",
    "grpc-web": "^2.0.0",
    "lodash.get": "^4.4.2",
    "mousetrap": "^1.6.3",
    "mutationobserver-shim": "^0.3.7",
    "protobufjs": "^6.11.2",
    "re-resizable": "^6.11.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "uuid": "^11.0.0",
    "validator": "^13.5.2"
  },
  "overrides": {
    "grpc": "npm:@grpc/grpc-js@^1.9.0"
  },
  "devEngines": {
    "node": ">=18.x",
    "bun": ">=1.0"
  }
}
